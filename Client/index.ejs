    <!-- Header Section -->
    <header class="header">
        <div class="auth-buttons">
            <a href="/u/login" class="auth-button">Log In</a>
            <a href="/u/login" class="auth-button">Sign Up</a>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Welcome to Recipe Hub</h1>
            <p>Your ultimate destination for delicious recipes and culinary inspiration.</p>
            <a href="#" class="cta-button" id="startLoading">Get Started</a>
        </div>
    </section>

    <!-- Write-Up Section -->
    <section class="write-up">
        <div class="write-up-content">
            <p>
                RecipeHub is a platform designed to facilitate the sharing and discovery of recipes among cooking enthusiasts of diverse cultures. It aims to provide users with a seamless experience for uploading, browsing, and interacting with recipes from a diverse range of cuisines and dietary preferences.
            </p>
            <p>
                RecipeHub is envisioned as a community that allows users to share, discover, and engage with a wide variety of people, catering to diverse culinary interests and dietary preferences, providing an intuitive and interactive experience for both recipe creators and consumers.
            </p>
        </div>
    </section>

    <!-- Featured Recipes Section -->
    <section class="featured-recipes">
        <h2>Featured Recipes</h2>

       
        
        <div class="recipe-container">
            <!-- Existing recipe cards here -->
            <% recipes.forEach((recipe)=>{ %>
                <div class="recipe-card">
                    <img src="<%= recipe.image%>" alt="<%=recipe.title%>">
                    <h4><%=recipe.title%></h4>
                    <p><%=recipe.description%></p>
                </div>
           <%  }) %>
            </div>   
           

