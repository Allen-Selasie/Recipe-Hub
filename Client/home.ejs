    fetch(`/recipe/engage/${recipeId}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ engagementType: 'comment', comment: commentText })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
           
            showCommentsModal(recipeId); // Refresh comments
